<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weteam.mapper.IUserDao">

    <!--配置 查询结果的列明和实体类的属性名的对应关系-->
    <resultMap id="userBaseMap" type="user">
        <!--主键-->
        <id property="id" column="id"></id>
        <!--非主键-->
        <result property="name" column="name"></result>
        <result property="userName" column="userName"></result>
        <result property="password" column="password"></result>
        <result property="gender" column="gender"></result>
        <result property="grade" column="grade"></result>
        <result property="academy" column="academy"></result>
        <result property="phone" column="phone"></result>
        <result property="email" column="email"></result>
        <result property="personInfo" column="personInfo"></result>
        <result property="avatarImgUrl" column="avatarImgUrl"></result>
        <result property="loginLastTime" column="loginLastTime"></result>
    </resultMap>

    <!--查询所有-->
    <select id="findAll" resultMap="userBaseMap">
        select * from USER
    </select>

    <select id="findCount" resultType="int">
        select count(id) from USER
    </select>

    <select id="findUserById" resultMap="userBaseMap" parameterType="int">
        select * from USER where id = #{id}
    </select>
</mapper>