<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weteam.mapper.IAwardDao">

    <!--配置 查询结果的列明和实体类的属性名的对应关系-->
    <resultMap id="awardBaseMap" type="award">
        <!--主键-->
        <id property="id" column="id"></id>
        <!--非主键-->
        <result property="name" column="name"></result>
        <result property="userId" column="userId"></result>
    </resultMap>

    <select id="findAwardByUserId" resultMap="awardBaseMap" parameterType="int">
        select * from AWARD a, USER u where a.userId = u.id and u.id=#{id}
    </select>



</mapper>